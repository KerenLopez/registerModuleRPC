@page
@model registerModuleRPC.Pages.Account.LoginModel
@{
}
<div class="container border">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="UserRPC.UserName"></label>
			</div>

			<div class="col-5">
				<input type="text" asp-for="UserRPC.UserName" class="form-control"/>

			</div>
			<span class="text-danger" asp-validation-for="UserRPC.UserName"></span>
		</div>

		<div class="form-group row">
			<div class="col-3">
				<label asp-for="UserRPC.Password"></label>
			</div>

			<div class="col-5">
				<input type="password" asp-for="UserRPC.Password" class="form-control"/>

			</div>
			<span class="text-danger" asp-validation-for="UserRPC.Password"></span>
		</div>

		<div class="form-group row">
			<div class="col-3">
				<input type="submit" class="btn btn-primary" value="Login" />
			</div>
		</div>
	</form>


</div>
